[colors]
background = #CC222222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #888
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/primary]
monitor = eDP
width = 99%
height = 30
offset-x = 0.5%
offset-y = 1%
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

wine-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2


font-0 = Fixed:pixelsize=10;1
font-1 = Unifont:fontformat=truetype:size=12:antialias=false;0
font-2 = Siji:pixelsize=12;1
font-3 = Font Awesome: style=Solid: pixelsize=12
font-4 = Fixed:pixelsize=12;1
font-5 = Material Design Icons: style=Regular: pixelsize=12; 2

modules-left = bspwm xwindow 
modules-center = filesystem memory cpu cpu-freq cpu-cores cpu-temperature gpu-temperature ssd-temperature
modules-right = date wip wlan pulseaudio-control battery powermenu

wm-restack = bspwm

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

cursor-click = pointer
cursor-scroll = ns-resize

tray-position = left
tray-padding = 10
tray-background = ${colors.background}

[bar/secondary]
monitor = HDMI-A-0
width = 99%
height = 27
offset-x = 0.5%
offset-y = 1%
radius = 0.0
fixed-center = true

