// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
    "context_servers": {
        "mcp-server-context7": {
            "source": "extension",
            "settings": {
                "default_minimum_tokens": "10000"
            }
        }
    },
    "hide_mouse": "on_typing_and_movement",
    "edit_predictions": {
        "mode": "subtle",
        "copilot": {
            "proxy": null,
            "proxy_no_verify": null
        },
        "enabled_in_text_threads": false
    },
    "icon_theme": "Catppuccin Frapp√©",
    "telemetry": {
        "diagnostics": true,
        "metrics": true
    },
    "tab_bar": {
        "show": true
    },
    "tabs": {
        "file_icons": true
    },
    "indent_guides": {
        "enabled": true,
        "coloring": "indent_aware"
    },
    "project_panel": {
        "dock": "left",
        "show_diagnostics": "all",
        "git_status": true,
        "button": true
    },
    "agent_font_size": 18,
    "agent": {
        "play_sound_when_agent_done": true,
        "always_allow_tool_actions": false,
        "default_model": {
            "provider": "copilot_chat",
            "model": "gpt-4o"
        },
        "default_profile": "write",
        "profiles": {
            "write": {
                "name": "Write",
                "enable_all_context_servers": true,
                "tools": {
                    "copy_path": true,
                    "create_directory": true,
                    "create_file": true,
                    "delete_path": true,
                    "diagnostics": true,
                    "edit_file": true,
                    "fetch": true,
                    "list_directory": true,
                    "move_path": true,
                    "now": true,
                    "find_path": true,
                    "read_file": true,
                    "grep": true,
                    "terminal": true,
                    "thinking": true,
                    "web_search": true
                }
            },
            "ask": {
                "context_servers": {
                    "mcp-server-sequential-thinking": {
                        "tools": {
                            "sequentialthinking": false
                        }
                    }
                },
                "name": "Ask",
                //"enable_all_context_servers": true,
                "tools": {
                    "contents": true,
                    "diagnostics": true,
                    "fetch": true,
                    "list_directory": true,
                    "now": true,
                    "find_path": true,
                    "read_file": true,
                    "open": true,
                    "grep": true,
                    "thinking": true,
                    "web_search": true
                }
            },
            "minimal": {
                "name": "Minimal",
                "enable_all_context_servers": false,
                "tools": {}
            }
        }
    },
    "editor_model": {
        "provider": "zed.dev",
        "model": "claude-3-7-sonnet-latest"
    },
    "show_edit_predictions": true,
    "features": {
        // Which inline completion provider to use.
        "edit_prediction_provider": "zed"
    },
    "vim_mode": true,
    "vim": {
        "cursor_shape": {
            "normal": "hollow",
            "insert": "bar",
            "replace": "block",
            "visual": "underline"
        }
    },
    "middle_click_paste": true,
    // "buffer_font_family": "0xProto Nerd Font",
    "buffer_font_family": "JetBrainsMono Nerd Font",
    "buffer_font_features": {
        "calt": true,
        "liga": true
    },
    "ui_font_size": 18,
    "buffer_font_size": 23.0,
    "relative_line_numbers": true,
    "soft_wrap": "editor_width",
    "show_whitespaces": "selection",
    "wrap_guides": [80, 120],
    "scrollbar": {
        "show": "never"
    },
    "minimap": {
        "show": "auto"
    },
    "vertical_scroll_margin": 0,
    "theme": {
        "mode": "system",
        "light": "Oceanic Next",
        "dark": "JetBrains New Dark"
    },
    "experimental.theme_overrides": {
        "syntax": {
            "comment.doc": {
                "font_style": "italic"
            }
        }
    },
    "inlay_hints": {
        "enabled": true
    },
    "diagnostics": {
        "button": true,
        "include_warnings": true,
        "inline": {
            "enabled": true,
            "update_debounce_ms": 150,
            "padding": 4,
            "min_column": 0,
            "max_severity": null
        }
    },
    "languages": {
        "Elixir": {
            "language_servers": ["elixir-ls", "tailwindcss-language-server"]
        },
        "TypeScript": {
            "inlay_hints": {
                "enabled": false
            }
        }
    },
    "lsp": {
        "elixirs-ls": {
            "settings": {
                "dialyzerEnabled": true
            }
        },
        "tailwindcss-language-server": {
            "settings": {
                "classAttributes": ["class", "className", "styles"],
                "includeLanguages": {
                    "HEEX": "html",
                    "Elixir": "html"
                }
            }
        }
    },
    "file_scan_exclusions": ["**/node_modules", "**/dist", "**/out"]
}
